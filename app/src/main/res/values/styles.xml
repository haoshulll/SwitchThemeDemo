<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="BlueTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/blue_window_bg</item>
        <item name="text_color">@color/white</item>
        <item name="primary_color">@color/blue_primary_bg</item>
        <item name="colorPrimary">?attr/primary_color</item>
        <item name="item_bg">@color/blue_item_bg</item>
    </style>

    <style name="OrangeTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/orange_window_bg</item>
        <item name="text_color">@color/white</item>
        <item name="primary_color">@color/orange_primary_bg</item>
        <item name="colorPrimary">?attr/primary_color</item>
        <item name="item_bg">@color/orange_item_bg</item>
    </style>

</resources>
